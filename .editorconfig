# Top-most EditorConfig file.
root = true

# Unix-style general file settings.
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python language indentation settings.
[*.py]
indent_size = 4
indent_style = space

# All json or yml files.
[*.yml]
indent_size = 4
indent_style = space
